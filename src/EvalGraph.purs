graphEval :: forall m. MonadError Error m => GraphConfig -> Raw Expr -> m (GraphEval GraphImpl EnvExpr Val)
graphEval { n, Œ≥ } e = do
   _ √ó _ √ó g √ó inŒ± √ó outŒ± <- flip runAllocT n do
      eŒ± <- alloc e
      let inŒ± = EnvExpr Œ≥ eŒ±
      g √ó outŒ± <- runWithGraphT_spy (eval Œ≥ eŒ± mempty) (vertices inŒ±)
      when checking.outputsInGraph $ check (vertices outŒ± ‚äÜ vertices g) "outputs in graph"
      pure (g √ó inŒ± √ó outŒ±)
   pure { g, graph_fwd, graph_bwd, inŒ±, outŒ± }
   where
   graph_fwd = curry (fwdSlice # spyFun' tracing.graphFwdSlice "fwdSlice")
   graph_bwd = curry (bwdSlice # spyFun' tracing.graphBwdSlice "bwdSlice")
   spyFun' b msg = spyFunWhen b msg (showVertices *** showGraph) showGraph
